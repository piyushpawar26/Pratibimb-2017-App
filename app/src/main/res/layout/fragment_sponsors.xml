<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="anonymous.prati_new.SponsorsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#fff"
                    android:text="Title Sponsor"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="#222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:src="@drawable/nivea"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="NIVEA"
                    android:background="#fff"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="#222"
                    android:textSize="23sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#fff"
                    android:text="Co-powered By"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="#222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:src="@drawable/viacom"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="VIACOM"
                    android:background="#fff"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="#222"
                    android:textSize="23sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="OTHER"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="#222"
                    android:textSize="30sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/aircel"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/box8"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/killer"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/uber"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/powerhouse"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/cafe2"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/essel"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/fast"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/inox"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/integriti"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/klounge"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/lawmanpg3"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/smoking"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/spykar"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/lic"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:src="@drawable/moods"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
